<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llButtonsSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="90dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="281dp"
                    android:layout_height="108dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/quiz_logo"
                    android:layout_gravity="left|start"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="50dp"
                    android:textColor="#00B050"
                    android:textSize="17sp"
                    android:textColorHint="#00B050"
                    android:hint="Username"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/etUsername"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="0dp"
                    android:text="vincent_murithi"
                    android:background="@drawable/signup_edittext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:minWidth="350dp"
                    android:layout_height="50dp"
                    android:textColor="#00B050"
                    android:textSize="17sp"
                    android:textColorHint="#00B050"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="vincent_murithi"
                    android:gravity="center_vertical"
                    android:background="@drawable/signup_edittext"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    >
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/swSkipLogin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip login next time"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp"
                        android:textColor="#131423"/>
                </LinearLayout>

                <Button
                    android:layout_width="130dp"
                    android:layout_height="42dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:background="@drawable/buttons_bg2"
                    android:textSize="17sp"
                    android:id="@+id/btLogin"
                    android:textColor="#2e4066"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#f2f2f2"
            android:id="@id/llButtonsSection">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#dfdfdf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="#2376ca"
                    android:textSize="16sp"
                    android:id="@+id/btSignUp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@color/transparent"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Forgot Password?"
                    android:textSize="16sp"
                    android:id="@+id/btForgotPassword"
                    android:textColor="#2376ca"
                    android:gravity="center"
                    android:textStyle="italic|normal"
                    android:textAllCaps="false"
                    android:background="@color/transparent"
                    android:layout_margin="2dp"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
